{% extends 'base.html.twig' %}

{% block title %}Hello ProjectController!
{% endblock %}

{% block body %}

	{# <a href="{{ path('app_category_new') }}" class="btn btn-primary">Add new category</a> #}

	<h3>
		Create new Categories</h3>
	{{ form_start(categoryForm) }}
	{{ form_errors(categoryForm) }}

	<div class="container">
		<div
			class="card" style="width: 30rem;">
			{# <img src="..." class="card-img-top" alt="..."> #}

			<div class="card-body">
				<p class="card-text">{{ form_row(categoryForm.name) }}</p>
			</div>
			{# <div class="card-body">
																<p class="card-text">{{ form_row(categoryForm.projects) }}</p>
															</div> #}

			<div class="card-body">
				<button class="btn btn-primary">Save</button>
				{{ form_end(categoryForm) }}
			</div>
		</div>
	</div>
	<div class="row">
		<table class="table">
			<thead>
				<tr>
					<th scope="col">Category Name</th>
				</tr>
			</thead>
			<tbody>
				{% for category in categories %}

					<tr>
						<td>{{category.name}}</td>
						<td>
							<a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-primary">edit</a>
						</td>

					</tr>
				{% endfor %}
			</tbody>
		</tbody>
	</table>

</div>{% endblock %}
