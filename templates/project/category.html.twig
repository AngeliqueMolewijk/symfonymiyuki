{% extends 'base.html.twig' %}

{% block title %}Hello ProjectController!
{% endblock %}

{% block body %}


	<h3>
		Create new Categories</h3>
	{{ form_start(form) }}
	{{ form_errors(form) }}

	<div class="container">
		<div class="card" style="width: 30rem;">

			<div class="card-body">
				<p class="card-text">{{ form_row(form.name) }}</p>
			</div>
			<div class="card-body">
				<button class="btn btn-primary">Save</button>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
	<div class="row">
		<table class="table">
			<thead>
				<tr>
					<th scope="col">Category Name</th>
					<th scope="col">Edit</th>
					<th scope="col">Delete</th>


				</tr>
			</thead>
			<tbody>
				{% for category in categories %}

					<tr>
						<td>{{category.name}}</td>
						<td>
							<form method="POST" action="{{ path('app_category_delete', {'id': category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');}">
								<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
								<button class="btn btn-danger btn-sm">Delete</button>
							</form>

						</td>
						<td>
							<a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-primary btn-sm">Edit</a>
						</td>
					</tr>
				</td>
			</tbody>
		</tr>
	{% endfor %}


</tbody></tbody></table></div>{% endblock %}
