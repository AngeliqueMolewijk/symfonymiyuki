{% extends 'base.html.twig' %}

{% block title %}Hello ProjectController!
{% endblock %}

{% block body %}
<div class="container m-4">
	<a href="{{ path('app_project_new')}}" class="btn btn-primary">New Project</a>
</div>


	<div class="row">
		{% for project in projects %}
<div class="col-auto">


				<div class="card" style="width: 18rem;">
					<img src="{{ asset('images/' ~ project.image)}}" class="card-img-top" alt="...">
					<div class="card-body">
						<h5 class="card-title">{{project.name}}</h5>
						<p class="card-text">{{project.description}}</p>
					</div>
					<ul class="list-group list-group-flush">
						<li class="list-group-item">
							In categories:
							{% for categorie in project.category %}
								{{categorie.name}}
							{% endfor %}
						</li>

						<li class="list-group-item">Amount Beads:
							{{ project.bead|length}}</li>
						<li class="list-group-item">A third item</li>
					</ul>
					<div class="card-body">
						<a href="{{ path('app_project_edit', {'id': project.id}) }}" class="btn btn-primary">edit</a>
						{# <a href="#" class="card-link">Another link</a> #}
					</div>
				</div>
			</div>
		{% endfor %}
	</div>

{% endblock %}
