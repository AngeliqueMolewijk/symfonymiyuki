{% extends 'base.html.twig' %}

{% block title %}New Project
{% endblock %}

{% block body %}
	<h3>
		Create new Project</h3>
	{{ form_start(form) }}
	{{ form_errors(form) }}

	<div class="container">
		<div class="card" style="width: 30rem;">

			<div class="card-body">
				<p class="card-text">{{ form_row(form.name) }}</p>
			</div>
			<div class="card-body">
				<p class="card-text">{{ form_row(form.description) }}</p>
			</div>
			{{ form_end(form) }}

			<div class="card-body">
				<button class="btn btn-primary">Save</button>
			</div>
		</div>


	</div>
	<script>
		document.addEventListener('DOMContentLoaded', function () {

$('.select2').select2({placeholder: "Choose an option", allowClear: true});
});
	</script>
{% endblock %}
