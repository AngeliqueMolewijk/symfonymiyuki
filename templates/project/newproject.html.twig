{% extends 'base.html.twig' %}

{% block title %}New Project
{% endblock %}

{% block body %}
	<h3>
		Create new Project</h3>
	{{ form_start(projectForm) }}
	{{ form_errors(projectForm) }}

	<div class="container">
<div class="card" style="width: 30rem;">



			<div class="card-body">
				<p class="card-text">{{ form_row(projectForm.name) }}</p>
			</div>
			<div class="card-body">
				<p class="card-text">{{ form_row(projectForm.description) }}</p>
			</div>
			<div class="card-body">
				<button class="btn btn-primary">Save</button>
			</div>
		</div>
		{{ form_end(projectForm) }}


	</div>
{% endblock %}
